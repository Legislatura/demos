#tutorial-container
  .col-md-12
    .row
      .title.text-center
        h1=t('tutorial.title')
    .row.text-center
      .col-md-offset-2.col-md-8.subtitle
        h3=t('tutorial.subtitle')
    .row.text-center#carousel-container
      .col-md-2
      .col-md-8
        a.btn-prev(href="#")
        a.btn-next(href="#")
        .carousel
          .step1
            .hidden-xs
              .btn.btn-sm.skip.pull-right Saltar tutorial &gt;&gt;
            .hidden-sm.hidden-md.hidden-lg
              .btn.btn-sm.skip Saltar tutorial &gt;&gt;
          .step2
            .hidden-xs
              .btn.btn-sm.skip.pull-right Saltar tutorial &gt;&gt;
            .hidden-sm.hidden-md.hidden-lg
              .btn.btn-sm.skip Saltar tutorial &gt;&gt;
          .step3
            .hidden-xs
              .btn.btn-sm.skip.pull-right Saltar tutorial &gt;&gt;
            .hidden-sm.hidden-md.hidden-lg
              .btn.btn-sm.skip Saltar tutorial &gt;&gt;
          .step4
            .hidden-xs
              button.btn.btn-lg.btn-primary.skip Ver los proyectos
            .hidden-sm.hidden-md.hidden-lg
              button.btn.btn-md.btn-primary.skip Ver los proyectos
      .col-md-2